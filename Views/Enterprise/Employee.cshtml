@section Scripts{
<script>
    const app = new Vue({
        el: '#app',
        data: {
            showEmp:false,
            positions: []
        },
        mounted() {
            this.getPositions();
        },
        methods: {
            checkIsValid:function(){
                let arrInput = formEmployee.querySelectorAll("[required]");
                let isInvalid=false;
                for (let inp of arrInput) {
                    if(inp.checkValidity()){
                        inp.style.borderBottom= "1px solid #36c6d3";
                    }else{
                        inp.style.borderBottom= "1px solid red";
                        isInvalid = true;
                    }
                }
               
            },

            closeWinEmp:function(){
                formEmployee.reset(); 
                this.showEmp=false;
            },
            getPositions: async function () {
                let resp = await axios.get('/Enterprise/GetPositions');
                this.positions = resp.data;
            }
        }

    })
</script>
}