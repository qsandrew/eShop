@{
Layout="../Shared/_Login.cshtml";
}
<style>
    #app {
        color: #edf4f8;
    }

    #formEnter {
        width: 300px;
        padding: 10px;
    }

    #formEnter label {
        display: block;
        margin-bottom: 20px;
    }

    #formEnter input,
    #formEnter select,
    #formEnter textarea {
        box-sizing: border-box;
        background-color: hsl(215, 19%, 40%);
        padding: 10px;
        width: 100%;
        color: white;
    }

    ::placeholder {
        color: hsl(0, 0%, 70%);
    }
</style>
<div id="app">
    <h2 style="text-align: center;">ИАС-РСЖ</h2>
    <form id="formEnter" method="POST">
        <label><b>Вход в систему:</b> Авторизация</label>
        <label>
            <input required type="text" minlength="5" name="login" placeholder="Введите логин">
        </label>
        <label>
            <input required type="password" minlength="5" name="password" placeholder="Введите пароль">
        </label>
        <label style="color:red">
            @ViewBag.Error
        </label>
        <button type="submit" style="width: 100%; padding: 10px;" class="btn red">Войти</button>

        <hr />

        <button type="button" onclick="location.href='/login/';" style="width: 100%; padding: 10px;"
            class="btn outWhite">Регистрация</button>
    </form>

</div>